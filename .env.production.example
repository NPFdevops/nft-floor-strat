# Production Environment Configuration
NODE_ENV=production

# API Keys - Production (Use Vercel/deployment platform environment variables)
VITE_NFT_PRICE_FLOOR_API_KEY=${NFT_PRICE_FLOOR_API_KEY}

# Analytics - Production
VITE_POSTHOG_KEY=${POSTHOG_KEY}

# Database Configuration - Production
DB_PATH=/tmp/nft_strategies.db
DB_BACKUP_PATH=/tmp/backups

# API Configuration - Production Optimized
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RATE_LIMIT_MAX_REQUESTS=200
API_RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration - Production
CACHE_DEFAULT_TTL=1800000
CACHE_MAX_SIZE=200
CACHE_ENABLE_COMPRESSION=true

# Security - Production
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_CSP=true
MAX_FILE_SIZE=10485760

# Performance - Production
ENABLE_GZIP_COMPRESSION=true
ENABLE_PREFETCH=true
LAZY_LOAD_IMAGES=true
ENABLE_CDN=true

# Production specific
HTTPS=true
VITE_USE_CDN=true

# Monitoring and Logging
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=error

# External Services - Production
SENTRY_DSN=${SENTRY_DSN}
SLACK_WEBHOOK_URL=${SLACK_WEBHOOK_URL}